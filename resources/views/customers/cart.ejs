<section class="cart py-16">
    <div class="order container mx-auto w-1/2">
    <div class="flex items-center border-b border-gray-300 pb-4">
    <img src="img/cart-black.png">
    <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
    </div>
    <% if(session.cart) {%>
    <div class="list ">
        <% for(let oxygen of Object.values(session.cart.items)) {%>
     <div class="flex items-center my-8">
         <img class="w-24" src="img/<%=oxygen.item.image%>"> 
         <div class="ml-4 flex-1">
            <h1><%=oxygen.item.name%></h1>
            <span><%=oxygen.item.size%></span>
         </div>
         <span class="flex-1"><%=oxygen.qty%></span>
         <span class="font-bold text-lg">Rs <%=oxygen.item.price*oxygen.qty%></span>
     </div>
     <%}%>
    </div>

        
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount: </span>
                <span class=" amount text-2xl font-bold">Rs <%=session.cart.totalPrice%></span>
            </div>
            <div>
                <form action="" class="mt-12">
                <input class="border border-gray-400 p-2 w-1/2 " type="text" placeholder="Phone Number">
                <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Address">
                <div>
                    <!--<button class="btn-primary px-6 py-2 rounded-full font-bold text-white mt-6" type="submit"> Order Now</button>-->
                </div>
                </form>
            </div>
            <a  class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 rounded-full font-bold text-white mt-6"href="/login">Login to continue</a>
        </div>
    </div>
<%} else {%>
 <div class="empty-cart">
        <div class="container mx-auto text-center">
         <h1 class="font-bold">CART EMPTY</h1>
         <p class="text-gray-500 text-lg">
             You haven't ordered any burger, got to the home page to get yourself one!!
         </p>
         <img class="w-2/5 mx-auto" src="img/empty-cart.png" alt="empty-cart">
         <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary  font-bold mt-12">GO BACK</a>
        </div>
    </div>
<%}%>
</section>